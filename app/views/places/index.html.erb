<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    <li data-target="#carousel-example-generic" data-slide-to="3"></li>
    <li data-target="#carousel-example-generic" data-slide-to="4"></li>
    <li data-target="#carousel-example-generic" data-slide-to="5"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'restaraunt.jpg' %>
      <div class="carousel-caption">
        Find the best Restaurants!
      </div>
    </div>
    <div class="item">
      <%= image_tag 'Burger.jpg' %>
      <div class="carousel-caption">
        ..and the best Burgers!!
      </div>
    </div>
     <div class="item">
      <%= image_tag 'Chinese.jpg' %>
      <div class="carousel-caption">
        Or maybe you're looking for Chinese?
      </div>
    </div>
    <div class="item">
      <%= image_tag 'Pizza.jpg' %>
      <div class="carousel-caption">
        Tell us about your experience at your local Pizza parlor!
      </div>
    </div>
    <div class="item">
      <%= image_tag 'Sushi.jpg' %>
      <div class="carousel-caption">
        At Foody there's something for everyone!
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>


<%= will_paginate @places %>

<br />
<% @places.each do |place| %>

<div class="booyah-box col-xs-10 col-xs-offset-1">
	<h1><%= link_to place.name, place_path(place) %></h1>
	<i><%= place.address %></i><br /><br />
	<p><%= place.description %></p><br />

	<% if place.user.present? %>
	<small><%=place.user.email %></small>
	<% end %>


<% if place.comments.present? %>
<div class="col-xs-12">
  <blockquote>
    <% if place.comments.order("id ASC").last.humanized_rating.present? %>
      <b><%= place.comments.order("id ASC").last.humanized_rating %></b> -
    <% end %>
    <%= place.comments.order("id ASC").last.message %>
    <small><%= place.comments.order("id ASC").last.user.email %></small>
  </blockquote>
</div>

<% end %>

</div>
<% end %>

<%= will_paginate @places %>